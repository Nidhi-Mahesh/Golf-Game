// Firestore Security Rules for Golf Game
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can only read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Leaderboard collection - anyone authenticated can read, only authenticated users can write
    match /leaderboard/{scoreId} {
      // Anyone can read leaderboard scores
      allow read: if true;
      
      // Only authenticated users can add scores
      allow create: if request.auth != null 
        && request.resource.data.keys().hasAll(['playerName', 'level', 'strokes', 'timestamp'])
        && request.resource.data.playerName is string
        && request.resource.data.level is number
        && request.resource.data.strokes is number
        && request.resource.data.level >= 1
        && request.resource.data.strokes >= 1;
      
      // Users can update scores they created (if userId field matches)
      allow update: if request.auth != null 
        && resource.data.userId == request.auth.uid;
      
      // Users can delete scores they created (if userId field matches)  
      allow delete: if request.auth != null 
        && resource.data.userId == request.auth.uid;
    }
    
    // Game stats collection (optional) - users can only access their own stats
    match /gameStats/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}